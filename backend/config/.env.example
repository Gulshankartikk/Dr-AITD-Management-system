# ===========================================
# COLLEGE ERP - ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and update the values

# Application Environment
NODE_ENV=development
APP_NAME=College ERP Management System
APP_VERSION=1.0.0

# Server Configuration
PORT=4001
HOST=localhost
FRONTEND_URL=http://localhost:5173

# Database Configuration
MONGO_URI=mongodb://localhost:27017/college-erp
DB_NAME=college-erp

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
BCRYPT_SALT_ROUNDS=12

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,txt

# Cloudinary Configuration (Optional - for cloud storage)
CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Configuration (Optional - for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@college.edu
EMAIL_ENABLED=false

# Default User Credentials
ADMIN_EMAIL=admin
ADMIN_PASSWORD=admin
TEACHER_DEFAULT_PASSWORD=teacher123
STUDENT_DEFAULT_PASSWORD=student123

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_TIMEOUT=3600000

# Development Tools
DEBUG_MODE=true
API_DOCS_ENABLED=true